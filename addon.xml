<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.iptv.magiogo" version="1.3.7" name="Magio Go" provider-name="Sorien, djlucas, rmich">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.18.4"/>
        <import addon="script.module.future" version="0.17.1"/>
        <import addon="script.module.routing" version="0.2.3"/>
        <import addon="inputstream.adaptive" version="2.3.22"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="magio/backplay.py">
                <label>Spätne prehrať</label>
                <visible>Window.IsVisible(tvguide)|Window.IsVisible(tvsearch)|Window.IsVisible(tvchannels)</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <summary lang="en_GB">Magio Go Addon</summary>
        <description lang="en_GB">PVR playlist and EPG generator for Magio Go Service</description>
        <description lang="sk_SK">PVR playlist a EPG generátor pre službu Magio Go</description>
        <license>MIT</license>
        <forum>https://www.xbmc-kodi.cz/prispevek-magio-go-addon</forum>
        <source>https://github.com/Sorien/plugin.video.iptv.magiogo</source>
        <news>
            [B]1.3.7[/B]
            - Kodi 19 Matrix, spatne prehravanie aktualneho programu, oprava nahravok
            [B]1.3.6[/B]
            -spatne prehravanie cez kontext menu
            [B]1.3.1[/B]
            - opravene prehravanie MPD (DASH)
            [B]1.2.6[/B]
            - pridaný výber quality v nastaveniach
            [B]1.1.0[/B]
            - pridané nahrávky
        </news>
        <assets>
            <icon>icon.png</icon>
            <screenshot>resources\screenshots\1.jpg</screenshot>
            <screenshot>resources\screenshots\2.jpg</screenshot>
            <screenshot>resources\screenshots\3.jpg</screenshot>
        </assets>
    </extension>
</addon>
